.row
  .large-10.small-10.small-centered.columns
    %h1 Trucks
%script
  var trucks = [];

.row
  .large-10.large-centered.small-8.small-centered.columns
    - @locations.each do |location|
      %script
        ="trucks.push({title:'#{location.truck.title}',latitude:#{location.latitude}, longitude:#{location.longitude}});"
      #truck_each.truck_box
        %h3.inline-block.bottom_up= location.truck.title
        %p.orange.bottom_up= location.truck.description
        %p= link_to("Twitter: @" + location.truck.twitter, "http://twitter.com/" + location.truck.twitter)
  #map_canvas.large-10.large-centered
