.row
  .large-4.small-10.small-centered.columns
    %h1 Trucks
%script
  var trucks = [];

.row
  .large-4.large-centered.small-8.small-centered.columns
    %table
      %thead
        %thead
          %tr
            %th Truck Name
            %th Description
            %th Twitter
        %tbody
        - @locations.each do |location|
          %script
            ="trucks.push({title:'#{location.truck.title}',latitude:#{location.latitude}, longitude:#{location.longitude}});"
          %tr
            %td= location.truck.title
            %td= location.truck.description
            %td= link_to(location.truck.twitter, "http://twitter.com/" + location.truck.twitter)
  #map_canvas
    / #map_canvas