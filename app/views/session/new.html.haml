.row
  .large-12.columns.spacer
.row
  .large-4.large-centered.columns
    = form_tag '/login' do
      = label_tag :email
      = text_field_tag :email, nil, :autofocus => true
      = label_tag :password
      = password_field_tag :password
      = link_to 'Cancel', root_path, :class => 'button small alert'
      = submit_tag 'Get Truckin', :class => 'button small success'